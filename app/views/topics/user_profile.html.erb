

<% if @topics.exists? %>
  <h1>
    Topic Content
  </h1>

  <% @topics.each do |topic| %>

    <table class="table">
      <tr>
        <th>
          Topic name
        </th>
      </tr>
      <tr>
        <td>
          <%= topic.name %>
        </td>
      </tr>

      <tr>
        <th>
          Content
        </th>
      </tr>
      <tr>
        <td>
          <%= topic.content %>
        </td>
      </tr>
    </table>
  
  <% end %>
<% end %>

<% if @comments.exists? %>

  <h1>
    Comments
  </h1>

  <table class="table">

    <tr>
      <th>
        Topic Name
      </th>
      <th>
        Content
      </th>
    </tr>

    <% @comments.each do |comment| %>
      <tr>
        <td>
          <%= comment.topic.name %>
        </td>
        <td>
          <%= comment.content %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>


<% unless @likes_topics.nil? %>

  <h1>
    <%= current_user.name %> had liked
  </h1>

  <table class="table">
    <tr>
      <td>
        <% @likes_topics.each do |topic| %>
          <span class="label label-success id-link" ><%= link_to topic.name, topic_path(topic) %></span>
        <% end %>
      </td>
    </tr>
  </table>
<% end %>



